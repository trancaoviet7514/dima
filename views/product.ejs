      </ul>
    </div>
  </div>


  <!-- single product -->
  <section class="single-product">
    <div class="container details">
      <div class="row">
        <%var str = `${products[0].image}` %>
        <div class="col-md-4">
          <div class="slider">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="<%= str%>" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="<%= str%>" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="<%= str%>" class="d-block w-100" alt="...">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <!-- <div class="slider">
                            <%var str = `${products[0].image}` %>
                            <img src="<%= str%>" alt="" class="img-responsive">
                    </div> -->
        </div>
        <div class="col-md-7">
          <h2 class="name"><%= products[0].name%></h2>
          <p class="price">Giá VND: <%= products[0].price%></p>
          <p class="phone">Liên hệ: <%= products[0].phone%></p>
        </div>
      </div>
    </div>
  </section>
